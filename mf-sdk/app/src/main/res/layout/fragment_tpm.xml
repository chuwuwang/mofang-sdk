<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_layout"
            android:text="@string/title_tpm_input"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_text">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <com.morefun.ysdk.sample.view.ClearEditText
                android:id="@+id/et_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:drawablePadding="@dimen/margin_layout"
                android:gravity="center|left"
                android:hint="Input Command"
                android:imeOptions="actionNext"
                android:padding="@dimen/margin_layout"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:maxLines="99"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/size_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_layout"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/size_text"
                android:text="@string/btn_serial_port_send" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_layout"
            android:text="@string/title_serial_port_receive"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_text">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_layout"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_tip">

            </TextView>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>