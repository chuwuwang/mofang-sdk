<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#000000"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_blue"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_led_off"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/iv_yellow"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/yellow_led_off"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/iv_green"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/green_led_off"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/red_led_off"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/led1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Led blue" />

            <CheckBox
                android:id="@+id/led2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Led yellow" />

            <CheckBox
                android:id="@+id/led3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Led green" />

            <CheckBox
                android:id="@+id/led4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Led red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_hardware_led"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="HARDWARE LED" />

                <Button
                    android:id="@+id/btn_soft_led"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="SOFTWARE LED" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>