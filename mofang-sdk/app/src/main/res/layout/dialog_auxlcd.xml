<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <Button
        android:id="@+id/btn_showAuxLcdBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text"
        android:text="Show AuxLcd Bitmap" />

    <Button
        android:id="@+id/btn_showAuxLcdMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text"
        android:text="Show Message" />

    <Button
        android:id="@+id/btn_clearAuxLcd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text"
        android:text="Clear AuxLcd" />

    <Button
        android:id="@+id/btn_closeAuxLcd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text"
        android:text="Close AuxLcd" />

    <ImageView android:layout_width="160dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_show"
        android:layout_marginTop="15dp"/>


</LinearLayout>